<script src="https://code.jquery.com/jquery-3.3.1.js"></script>
<script src="../../js/datatables.js"></script>
<script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap.min.js"></script>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />

@using Microsoft.AspNetCore.Identity
@using AuthDatabase.Entities;
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
@model ListPlanViewModel;
@{
    ViewData["Title"] = "Lista dostępnych planów";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista dostępnych Planów</h1>


<div style="margin-top: 50px">
    <table id="myTable" class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">Miesiąc</th>
                <th scope="col">Założona kwota</th>
                <th scope="col">Faktyczna kwota</th>
                <th>Action</th>


            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
            <tr>
                <td style="height: 50px;"></td>
                <td style="height: 50px;">@item.Miesiąc</td>
                <td style="height: 50px;">@item.ZalozonaKwota</td>
                <td style="height: 50px;">@item.FaktycznaKwota</td>
                <td style="height: 50px;"><a asp-action="DeletePlan" asp-route-id="@item.PlanId">Delete</a></td>
            </tr>
            }
        </tbody>

    </table>
</div>
<a style="position: relative; top: 30px;" asp-area="" asp-controller="Plan" asp-action="AddNewPlan"><button class="ui primary button" type="submit">Dodaj nowy plan</button></a>

<script>
    let table = $('#myTable').DataTable({
        columnDefs: [{
            orderable: false,
            targets: [0,4]
        }],
        "order": [[1, 'asc']]
    });
    $('#myTable_wrapper').removeClass('form-inline')

    table.on( 'order.dt search.dt', function () {
        table.column(0, {search:'applied', order:'applied'}).nodes().each( function (cell, i) {
            cell.innerHTML = i+1;
        } );
    } ).draw();

</script>


