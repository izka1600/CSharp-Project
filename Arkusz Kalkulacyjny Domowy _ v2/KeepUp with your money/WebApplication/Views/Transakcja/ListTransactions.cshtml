<script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap.min.js"></script>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap.min.css" />

@using Microsoft.AspNetCore.Identity
@using AuthDatabase.Entities;
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
@model ListTransakcjaViewModel;


@{
    ViewData["Title"] = "Lista Twoich Transakcji";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista Twoich Transakcji</h1>

<div style="margin-top: 50px">
    <table id="myTable" class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">Data</th>
                <th scope="col">IdUzytkownika</th>
                <th scope="col">IdKategorii</th>
                <th scope="col">IdPodkategorii</th>
                <th scope="col">Kwota</th>
                <th>Akcja</th>


            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
            <tr>
                <th scope="row">@item.TransId</th>
                <td style="height: 50px;">@item.Data</td>
                <td style="height: 50px;">@item.IdUzytkownika</td>
                <td style="height: 50px;">@item.IdKategorii</td>
                <td style="height: 50px;">@item.IdPodkategorii</td>
                <td style="height: 50px;">@item.Kwota</td>
                <td style="height: 50px;"><a asp-action="DeleteTransaction" asp-route-id="@item.TransId">Delete</a></td>
            </tr>
            }
        </tbody>

    </table>
</div>

<script>
    $('#myTable').dataTable({
        columnDefs: [{
            orderable: false,
            targets: 2
        }],
    });
    $('#myTable_wrapper').removeClass('form-inline')

</script>