@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@{
    ViewData["Title"] = "Logowanie";
}

<h2 style="text-align: center; position: relative; top: 30px;">@ViewData["Title"]</h2>
<form class="ui form " style="width: 60%; position: relative; left: 20%; top: 30px;" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
    <hr />
    <div class="ui error message"></div>
    <div class="field">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" type="email" name="email" placeholder="Email">
    </div>
    <div class="field">
        <label asp-for="Password">Hasło</label>
        <input asp-for="Password" type="password" name="password" placeholder="Hasło">
    </div>
    <div class="field">
        <div class="checkbox">
            <label asp-for="RememberMe">
                <input asp-for="RememberMe" />
                @Html.DisplayNameFor(m => m.RememberMe)
            </label>
        </div>
    </div>
    <button class="ui primary button" type="submit">Zaloguj</button>
</form>


