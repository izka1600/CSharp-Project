        <span asp-validation-for="CoverName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CoverName" for="CoverName">Cover Name</label>
        <input asp-for="CoverName" class="file-path validate" type="text" placeholder="Upload your file">
