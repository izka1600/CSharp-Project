@{
    ViewData["Title"] = "AddItem";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

@model DB_Model_EFCore.Class.NewBook ;


<form asp-action="AddItem">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="BookName" for="BookName">Book name</label>
        <input asp-for="BookName" type="text" class="form-control" id="BookName" placeholder="Example book">
        <span asp-validation-for="BookName" class="text-danger"></span>
    </div>
